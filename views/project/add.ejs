<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
      <div class="well bs-component">
        <form class="form-horizontal" action="/project/create" method="post">
          <fieldset>
            <legend>Submit a New Project</legend>
            <div class="form-group">
              <label for="inputTeam" class="col-lg-2 control-label">Team Name</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="inputTeam" name="team" placeholder="Team Name">
              </div>
            </div>
            <div class="form-group">
              <label for="inputUrl" class="col-lg-2 control-label">URL</label>
              <div class="col-lg-10">
                <input type="text" class="form-control" id="inputUrl" name="url" placeholder="Enter your site url">
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
  </div>
</div>